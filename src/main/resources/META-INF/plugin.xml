<idea-plugin>
    <id>radixWarePlugin</id>
    <name>RadixWare</name>
    <vendor email="universum@gmail.com" url="https://compassplus.ru/">CompassPlus</vendor>

    <description>This plugin is designed to simplify work in the RadixWare project.</description>

    <depends>com.intellij.modules.lang
    </depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="HelloAction" text="Hello" description="Says hello"/>
        </group>
    </actions>

</idea-plugin>